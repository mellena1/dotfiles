# Go
export GOPATH=$HOME/go
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOBIN

# kotlin
export KOTLIN_HOME=/usr/share/kotlin

# java
export JAVA_HOME=/usr/lib/jvm/default

export EDITOR=nvim

# zoxide
if command -v zoxide &> /dev/null; then
    eval "$(zoxide init zsh)"
fi

